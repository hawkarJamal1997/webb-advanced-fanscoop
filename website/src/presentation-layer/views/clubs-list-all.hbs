<div class="content">
	<h1>All Clubs</h1>
	<a href="/clubs/create" class="button is-success">Create club</a>

	{{#if errors.length}}
		<p>Oh no, something went wrong:</p>
		<ul>
			{{#each errors}}
			<li>{{this}}</li>
			{{/each}}
		</ul>
		{{else}}

			{{#if clubs.length}}
				{{#each clubs}}
				<a href="/clubs/{{name}}">
					<div class="card">
						<div class="card-content">
							<p class="title">{{name}}</p>
						</div>
					</div>
					{{/each}}
			{{else}}
			<p>No clubs exist yet.</p>
			{{/if}}

		{{/if}}
</div>