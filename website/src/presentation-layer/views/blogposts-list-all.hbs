<div class="content">
	<h1>All blogposts of {{name}}</h1>
	<a href="/blogposts/create?club={{name}}" class="button is-success">Create blogpost</a>
	{{#if errors.length}}
	<p>Oh no, something went wrong:</p>
	<ul>
		{{#each errors}}
		<li>{{this}}</li>
		{{/each}}
	</ul>
	{{else}}

	{{#if blogposts.length}}
		{{#each blogposts}}
			<div class="card">
				<div class="card-content">
					<p class="title">{{title}}</p>
					<p class="subtitle">{{content}}</p>
				</div>
			</div>
		{{/each}}
		{{else}}
			<p>No blogposts exist yet.</p>
		{{/if}}

	{{/if}}
</div>