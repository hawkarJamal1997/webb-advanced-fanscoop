<div class="content">
	<h1>blogpost</h1>
	{{#if errors.length}}
	<p>Oh no, something went wrong:</p>
	<ul>
		{{#each errors}}
		<li>{{this}}</li>
		{{/each}}
	</ul>
	{{else}}

	{{#if blogpost}}
	<dl>

		<dt>Id:</dt>
		<dd>{{blogpost.id}}</dd>

		<dt>Title:</dt>
		<dd>{{blogpost.title}}</dd>

		<dt>Content:</dt>
		<dd>{{blogpost.content}}</dd>

	</dl>
	{{else}}
	<p>No, that blogpost doesn't exist.</p>
	{{/if}}

	{{/if}}
</div>