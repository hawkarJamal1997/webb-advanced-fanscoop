<div class="content">
	<h2>Sign in</h2>
	<p>Sign in using the form below.</p>
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-7-desktop is-12-mobile is-7-tablet is-7-widescreen">
				<form action="/accounts/sign-in" method="POST" class="box">
					<div class="field">
						<label class="label">Username:</label>
						<input type="text" class="input" name="username">
					</div>
					<div class="field">
						<label class="label">Password:</label>
						<input type="password" placeholder="**********" class="input" name="password">
					</div>
					<div>
						<input class="button is-success" type="submit" value="Login">
					</div>
				</form>
			</div>
		</div>
	</div>
</div>