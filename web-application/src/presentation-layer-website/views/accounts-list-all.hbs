<div class="content">
	<h1>All accounts</h1>
	{{#if isLoggedIn}}
		<p class="subtitle" id="successfull">Signed in as {{isLoggedIn.username}}</p>
	{{/if}}
	{{#if errors.length}}
	<p>Oh no, something went wrong:</p>
	<ul>
		{{#each errors}}
		<li>{{this}}</li>
		{{/each}}
	</ul>
	{{else}}
		{{#if accounts.length}}
		<ul>
			{{#each accounts}}
			<li><a href="/accounts/{{id}}">{{username}}</a></li>
			{{/each}}
		</ul>
		{{else}}
		<p>No accounts exist yet.</p>
		{{/if}}
	{{/if}}
</div>