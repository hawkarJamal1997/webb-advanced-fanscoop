<div class="content">
	<h2>Sign up</h2>
	<p>Create a new account using the form below.</p>
	{{#if errors.length}}
	<p>Fix the errors</p>
	<ul>
		{{#each errors}}
		<li>{{this}}</li>
		{{/each}}
	</ul>
	{{/if}}
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-7-desktop is-12-mobile is-7-tablet is-7-widescreen">
				<form action="/accounts/sign-up" method="POST" class="box">
					<div class="field">
						<label class="label">Username:</label>
						<input type="text" class="input" name="username" value="{{username}}">
					</div>
					<div class="field">
						<label class="label">Password:</label>
						<input type="password" class="input" name="password" value="{{password}}">
					</div>
					<div>
						<input class="button is-success" type="submit" value="Create Account">
					</div>
				</form>
			</div>
		</div>
	</div>
</div>